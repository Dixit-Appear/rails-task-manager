  <h1><%= @tasks.title %></h1>
  <p class="details"><%= @tasks.details %></p>
    <% if @tasks.completed  %>
      <i class="far fa-check-square"><p>This task is completed</p></i>
    <% else %>
      <i class="far fa-square"><p>This task is not completed yet</p></i>
    <% end %>
    <hr>
    <h3><%= link_to "Back to list", tasks_path %></h3>
    <h3><%= link_to "Edit this task", edit_task_path %></h3>


