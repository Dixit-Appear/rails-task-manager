<h1>My tasks</h1>
<% @tasks.each do |task| %>
<div class="check">
  <% if task.completed  %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
  <%= link_to task.title, task_path(task) %>
  <i class="fas fa-trash-alt"><%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  </i>
</div>


<% end %>
<hr>
<p class="link"><%= link_to "+ Add new task", new_task_path(@task)%></p>
